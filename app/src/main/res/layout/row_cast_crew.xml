<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCelebContainerCastCrewRow"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_100sdp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewCelebCastCrewRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/poster_thumbnail"
            android:scaleType="centerCrop"
            android:src="@drawable/zootopia_thumbnail" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewCelebNameCastCrewRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_3sdp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewCelebContainerCastCrewRow"
        app:layout_constraintStart_toStartOf="@+id/cardViewCelebContainerCastCrewRow"
        app:layout_constraintTop_toBottomOf="@+id/cardViewCelebContainerCastCrewRow" />


    <TextView
        android:id="@+id/textViewCelebCharacterCastCrewRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewCelebContainerCastCrewRow"
        app:layout_constraintStart_toStartOf="@+id/cardViewCelebContainerCastCrewRow"
        app:layout_constraintTop_toBottomOf="@+id/textViewCelebNameCastCrewRow" />


</androidx.constraintlayout.widget.ConstraintLayout>